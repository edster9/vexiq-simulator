# Default VEX IQ Scene
# YAML-like format for scene configuration

name: Default Scene

# Physics settings
physics:
  friction: 0.8
  cylinder_friction: 0.5
  gravity: 386.1

# Robots in the scene
# Robots with iqpython can be controlled, others are static
# Press 1-4 to switch active robot (only one receives gamepad input)
robots:
  - mpd: ClawbotIQ.mpd
    position: [-20, 0, 0]
    rotation: 0
    iqpython: ClawbotIQ.iqpython
    config: ClawbotIQ.config

  - mpd: Ike.mpd
    position: [20, 0, 0]
    rotation: 180

# Cylinder obstacles
# 4" diameter = 2" radius, 7" tall
cylinders:
  - position: [-30, -20]
    radius: 2
    height: 7
    color: [0.9, 0.2, 0.2]

  - position: [30, -20]
    radius: 2
    height: 7
    color: [0.2, 0.9, 0.2]

  - position: [-30, 20]
    radius: 2
    height: 7
    color: [0.2, 0.2, 0.9]

  - position: [30, 20]
    radius: 2
    height: 7
    color: [0.9, 0.9, 0.2]
