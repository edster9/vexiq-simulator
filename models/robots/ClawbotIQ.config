# ClawbotIQ Configuration File
# ============================
# User-defined configuration that won't be overwritten by robotdef generation.
# This file is merged with ClawbotIQ.robotdef at load time.

version: 1

# Motor Port Assignments
# Keys are motor names from robotdef (LeftSideDrive_1, RightSideDrive_1, etc.)
motors:
  LeftSideDrive_1:
    port: 1
    mechanism: drivetrain.left_wheels

  RightSideDrive_1:
    port: 6
    mechanism: drivetrain.right_wheels

  ShoulderMountA_1:
    port: 2
    mechanism: kinematics.Arm.ldr

  Arm_1:
    port: 3
    mechanism: kinematics.FingerA.ldr, kinematics.FingerB.ldr

# Kinematics Definitions
# Defines how submodels rotate/articulate
kinematics:
  Arm.ldr:
    rotation_axis: [1, 0, 0]       # X-axis (arm goes up/down)
    rotation_origin: [0, 0, 200]   # Pivot point relative to submodel (LDU)
    rotation_limits: [-30, 90]     # Degrees

  FingerA.ldr:
    rotation_axis: [0, 1, 0]       # Y-axis (opens outward)
    rotation_origin: [0, 0, 0]
    rotation_limits: [0, 45]

  FingerB.ldr:
    rotation_axis: [0, -1, 0]      # Negative Y (mirror)
    rotation_origin: [0, 0, 0]
    rotation_limits: [0, 45]

# Sensor Port Assignments
sensors:
  distance_sensor:
    submodel: ClawbotIQ.ldr
    port: 4

  bumper_switch:
    submodel: FrontBumper.ldr
    port: 5

  touch_led:
    submodel: TouchLED.ldr
    port: 7

  color_sensor:
    submodel: ColorSensor.ldr
    port: 8

  gyro_sensor:
    submodel: GyroSensor.ldr
    port: 9
